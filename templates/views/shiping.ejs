<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head_links.ejs') %>
</head>

<body class="full-bg">
    <!-- navbar -->
    <%- include('../partials/navbar.ejs') %>

        <!-- login area -->
        <div class="modal-dialog log-sign-m">
            <div class="modal-content">
                <div class="modal-heading ">
                    <h2 class="text-center mt-3">Shipping Details</h2>
                </div>
                <hr />
                <div class="modal-body ">
                    <form action="/ship" method="POST">
                        <div class="input-group pb-3">
                            <label for="">Address :</label>
                            <div class="input-group">
                                <div class="input-group-text">Aa</div>
                                <textarea type="text" name="address" class="form-control" id="inlineFormInputGroupUsername"
                                    placeholder="Address" required></textarea>
                            </div>
                        </div>
                        <div class="input-group pb-3">
                            <label for="">City :</label>
                            <div class="input-group">
                                <div class="input-group-text">Aa</div>
                                <input type="text" name="city" class="form-control" id="inlineFormInputGroupUsername"
                                    placeholder="city" required>
                            </div>
                        </div>
                        <div class="input-group pb-3">
                            <label for="">State :</label>
                            <div class="input-group">
                                <div class="input-group-text">Aa</div>
                                <input type="text" name="state" class="form-control" id="inlineFormInputGroupUsername"
                                    placeholder="state" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <label for="">Country :</label>
                                <div class="input-group">
                                    <div class="input-group-text">Aa</div>
                                    <input type="text" name="country" class="form-control"
                                        id="inlineFormInputGroupUsername" placeholder="country" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <label for="">Pincode :</label>
                                <div class="input-group">
                                    <div class="input-group-text">01</div>
                                    <input type="text" name="pincode" class="form-control"
                                        id="inlineFormInputGroupUsername" placeholder="pincode" required>
                                </div>
                            </div>

                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-lg"
                                style="background-color: #b1606a; color: white;">Submit</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>

</body>

</html>